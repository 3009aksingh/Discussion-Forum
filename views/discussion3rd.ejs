    <div class="container contact-form">
      <div class="contact-image">
        <img
          src="https://image.flaticon.com/icons/png/512/3925/3925149.png"
          alt="rocket_contact"
        />
      </div>
      <form id="formAdd" action="/users/discussion3rd" method="POST">
        <p>
          <b><i class="far fa-laugh-beam fa-2x"></i> Send us your response! </b>
        </p>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <input
                type="text"
                name="name"
                class="subject form-control"
                placeholder="Your Name *"
                required="required"
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="subject"
                class="subject form-control"
                placeholder="Subject *"
                value=""
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="question"
                class="subject form-control"
                placeholder="Question *"
                value=""
                required="required"
              />
            </div>
            <button
              type="submit"
              class="btn btn-block g-button"
             
              style="margin: auto; display: block"
            >
              SUBMIT
            </button>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <textarea
                name="response"
                class="subject form-control"
                placeholder="Enter your response *"
                style="width: 100%; height: 150px"
                required="required"
              ></textarea>
            </div>
          </div>
        </div>
      </form>
    </div>

