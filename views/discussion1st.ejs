<body>
  <ul>
    <li>
      <a class="design" href="/users/discussion1st">
        <h3>Discussion Forum <i class="far fa-comments"></i></h3>
      </a>
    </li>
    <li>
      <a href="/users/discussion2nd"><button type="button" class="navbar btn btn-light btn-rounded">
          <b>Previously asked questions</b>
        </button></a>
    </li>

    <li>
      <a href="/users/logout"><button type="button" class="navbar btn btn-light btn-rounded">
          <b>Logout</b>
        </button></a>
    </li>
  </ul>

  <div class="container">
    <div class="col-md-6 mx-auto text-center">
      <div class="header-title">
        <h1 class="wv-heading--title">Welcome to Discussion Forum!</h1><br><br>

        <h2 class="wv-heading--subtitle">
          Enter your question, we will be happy to answer you
          <i class="fab fa-angellist"></i>
        </h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 mx-auto">
        <div class="myform form">
          <form id="formAdd" action="/users/discussion1st" method="POST">
            <div class="form-group">
              <input type="text" name="name" class="subject form-control my-input" placeholder="Enter your name"
                required="required" /><br />
            </div>
            <div class="form-group">
              <input type="text" name="subject" class="subject form-control my-input" placeholder="Subject"
                required="required" /><br />
            </div>
            <div class="form-group">
              <textarea name="question" rows="6" class="form-control my-input" placeholder="Question"
                required="required"></textarea>
            </div>
            <br />
            <div>
              <a>
                <button type="submit" class="btn btn-block g-button" style="margin: auto; display: block">
                  SUBMIT
                </button>
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <br /><br />

  <footer class="bg-dark text-center text-white">
    <!-- Grid container -->
    <div class="container p-4 pb-0">
      <!-- Section: Social media -->
      <section class="mb-4">
        <!-- Facebook -->
        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-facebook-f"></i></a>

        <!-- Twitter -->
        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-twitter"></i></a>

        <!-- Google -->
