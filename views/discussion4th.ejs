  </script>
  <div>
    <ul>
      <li>
        <a href="/users/discussion1st">
          <h3>Discussion Forum <i class="far fa-comments"></i></h3>
        </a>
      </li>
      <li>
        <a href="/users/discussion1st">
          <button type="button" class="navbar btn btn-light btn-rounded">
            <b>Add new questions</b>
          </button></a>
      </li>
      <li>
        <a href="/users/discussion3rd">
          <button type="button" class="navbar btn btn-light btn-rounded">
            <b> Add new response</b>
          </button></a>
      </li>
    </ul>
  </div>

  <!-- Login form creation starts-->
  <section class="container-fluid">
    <!-- row and justify-content-center class is used to place the form in center -->
    <section class="row justify-content-center">
      <section class="col-12 col-sm-6 col-md-8">
        <div class="inbox_people">
          <div class="headind_srch">
            <div class="recent_heading">
              <h4>Questions & Responses</h4>
            </div>
          </div>
          <div class="inbox_chat">
            <div class="chat_list active_chat">
              <div class="chat_people">
                <%sendresponsesList.forEach(sendresponse => {%>
                <div class="chat_img"> </div>
                <div class="chat_ib">
                  <h5><strong><i class="fas fa-user-tie fa-3x"></i><%= sendresponse.name %></strong></h5>
                  <p><b>Subject : </b><%= sendresponse.subject %></p>
                  <p><b>Question : </b><%= sendresponse.question %></p>
                  <p><b>Response : </b><%= sendresponse.response %></p>
                  <hr>
                </div>
                <%})%>
              </div>
            </div>
          </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        </form>
      </section>
    </section>
  </section>
  <!-- //////////////////////////FOOTER STARTS//////////////////////////////////////////////////// -->
  <footer class="bg-dark text-center text-white">
